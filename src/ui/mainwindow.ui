    color: #eeeeee; /* 稍微淡一点的白 */
}

/* 6. 输入框美化 */
QLineEdit {
    border: 1px solid white;
    border-radius: 15px; /* 圆角 */
    padding: 5px 15px;
    background-color: rgba(255, 255, 255, 0.3); /* 半透明白色 */
    color: white;
    font-size: 14px;
}
QLineEdit:focus {
    background-color: rgba(255, 255, 255, 0.5);
}

/* 7. 按钮美化 */
QPushButton {
    background-color: white;
    color: #4facfe; /* 字体颜色和背景呼应 */
    border-radius: 15px;
    padding: 5px 20px;
    font-weight: bold;
}
QPushButton:hover {
    background-color: #f0f0f0;
}
QPushButton:pressed {
    background-color: #e0e0e0;
    padding-top: 7px; /* 按下微动效果 */
}</string>
